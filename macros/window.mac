	MACRO DEFLCB	; LineControlBlock definieren
	IF SCR_MAX_X>255  ; X
	  dw \0
	ELSE
	  db <(\0)
	ENDIF
	IF SCR_MAX_Y>255  ; Y
	  dw \1
	ELSE
	  db <(\1)
	ENDIF
	IF SCR_MAX_X>255  ; W
	  dw \2
	ELSE
	  db <(\2)
	ENDIF
	IF SCR_MAX_Y>255  ; H
	  dw \3
	ELSE
	  db <(\3)
	ENDIF
	db \4	; Color
	IFVAR \5
	  db \5
	ELSE
	  db 1
	ENDIF
	ENDM


	MACRO DEFWCB	; WindowControlBlock definieren
	IF SCR_MAX_X>255  ; X
	  dw \0
	ELSE
	  db <(\0)
	ENDIF
	IF SCR_MAX_Y>255  ; Y
	  dw \1
	ELSE
	  db <(\1)
	ENDIF
	IF SCR_MAX_X>255  ; W
	  dw \2
	ELSE
	  db <(\2)
	ENDIF
	IF SCR_MAX_Y>255  ; H
	  dw \3
	ELSE
	  db <(\3)
	ENDIF
	IFVAR \4
	  db \4	; Color
	ELSE
	  ECHO "DEFWCB : Farbe fehlt"
	  db 0
	ENDIF
	IFVAR \5
	  db \5	; Rahmen-Farbe
	ELSE
	  ECHO "DEFWCB : Rahmen-Farbe fehlt"
	  db 15
	ENDIF
	IFVAR \6
	  db \6	; Rahmen-Dicke
	ELSE
	  db 1
	ENDIF
	ENDM

