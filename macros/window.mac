	ENDM
	MACRO BOX ; X,Y,W,H,C
	lda #<(\0)
	sta TempLCB+LineX
	lda #<(\2)
	sta TempLCB+LineW
	IF SCR_MAX_X>255
	  lda #>(\0)
	  sta TempLCB+LineX+1
	  lda #>(\2)
	  sta TempLCB+LineW+1
	ENDIF
	lda #<(\1)
	sta TempLCB+LineY
	lda #<(\3)
	sta TempLCB+LineH
	IF SCR_MAX_Y>255
	  lda #>(\1)
	  sta TempLCB+LineY+1
	  lda #<(\3)
	  sta TempLCB+LineH+1
	ENDIF
	IFVAR \4
	  LDA #\4
	ELSE
	  lda FG_Color
	ENDIF
	sta TempLCB+LineColor
	lda #1
	sta TempLCB+LineWidth
	jsr Rectangle0
	ENDM

